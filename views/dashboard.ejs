<script>
$('document').ready(function() {

    var row3 = $('#row3');
    var attendanceInput = $('#attendanceInput');
    var attendanceActive = $('#attendanceActive');
    var endAttendance = $('#btnEndAttendance');
    var notActive = $('#notActive');
    var downloadReady = $('#downloadReady');

    downloadReady.hide();


    var unitStrength;
    var signedIn = new Array();
    //row3.hide();
    attendanceActive.hide();

    endAttendance.on('click',function(){
        console.log("AttendanceID"+attendanceID);
        socket.emit("Attendance",{command:"ENDATTENDANCE",attendanceID:attendanceID});
        console.log("Finish Attendance Command SENT!")
    })

    attendanceInput.on('input',function(){

    })

    $('#topAlert').hide();
        var UUID = "<%=session.user['_id'] %>";
        console.log(UUID);
        var socket = io.connect('/');
        socket.on('firstReceipt', function (data) {
            console.log(data);
        socket.emit('registrationUUID', { UUID: UUID });//

        socket.emit("UnitStats",{command: "getUnitDescrip"});
        console.log("UnitStats + unitDescrip EMITTED");

        socket.emit("UnitStats",{command:"getUnitStrength"});
        console.log("getUnitSTrength EMITTED!");

        socket.emit("attendanceStats",{command: "getNumAttendanceSessions"});
        console.log("AttendanceStats EMITTED");

         socket.emit("Attendance",{command:"CHECKACTIVE"});


        });

    

    socket.on("updateUnitStats",function(data){
        switch(data.message){
            case "unitStrength":
            unitStrength = data.data;
            $('#unitStrength').html(data.data);
            break;

            case "unitDescrip":
             $('#unitDescrip').html(data.data);

        }

       
    })

    socket.on("updateAttendanceStats",function(data){
        console.log(data);
        var sessAmt = data.data;

        switch(data.message){
            case "numAttendanceSessions":
             $('#upcomingAttendance').html(sessAmt);
             break;
        }
        //alert("GOT SOMETHING!"+data.data);
       


    })

    socket.on("disconnect", function(){
        alert("You've been disconnected!");
    })

 socket.on("downloadBarcodes",function(data){
        console.log(data);
        $(location).attr('href',data.message);

    })


 socket.on("event",function(data){
    console.log("UNIT EVENT INVOKED WITH DATA"+console.log(data));
    switch(data.type){
        case "Attendance":
        //alert("An Attendance Session is currently active!");
        $('#topAlert').show();
        $('#topAlert').append("An attendance session is currently active, click <a href='/attendanceDashboard'> here </a> to go into ATTENDANCE SESSION mode on this device.");
        attendanceActive.fadeIn();
        //row3.show();
    }
 })

socket.emit("Attendance",{command:"GET"});
console.log("Socket Emit GET ATTENDANCE");



 socket.on("Attendance",function(data){
            console.log("Attendance invoekd");
            console.log(data);
            switch(data.message){
                case "SESSIONACTIVE":
                    //alert("Attendance Session IS active");
                    notActive.hide();
                    var endDateTime = convertDate(data.endTime);
                    console.log("EndDateTime = "+endDateTime);
                    $('#endTime').append(endDateTime);

                     attendanceID = data.attendanceID;

                    socket.emit("Attendance",{command:"GETNAMES",attendanceID:data.attendanceID})
                    attendanceActive.fadeIn();
                     socket.emit("Attendance",{command:"GETLIVESTATS",attendanceID:attendanceID});
                    
                    break;
                case "NOSESSIONACTIVE":
                    //alert("No attendance sessions are active");
                    notActive.fadeIn();
                    break;
                case "GETCADETS":
                //active.fadeIn();
                    console.log(data);
                    var cadets =data.cadets;
                    var orgGroups = data.orgGroups;
                    transformCadetsOrgGroups(cadets,orgGroups);
                    var searchValues = [];
                    for (var i = 0; i < cadets.length; i++) {
                        var cdt = cadets[i];
                         var searchObject = new Object({word:cdt.CIN+" "+cdt.LastName+" "+cdt.FirstName+" "+cdt.OrgGroupName+" ",name: cdt.LastName});
                         searchValues.push(searchObject);

                    };

                    console.log(searchValues);

                        var states = new Bloodhound({
                          datumTokenizer: function(d) { return Bloodhound.tokenizers.whitespace(d.word); },
                          queryTokenizer: Bloodhound.tokenizers.whitespace,
                          limit: 4,
                          local: searchValues
                        });

                        states.initialize();

                        $('#cadet').typeahead(null, {
                          name: 'states',
                          displayKey: 'word',
                          source: states.ttAdapter()
                        }); 
                        break;
                case "SIGNINSUCCESS":
                    //alert(data.cadet+"has been signed in!"); 
                    signedIn.push(data.cadet);
                    var currentDate = new Date();
                    $('#liveAttendance').prepend("<div class='alert alert-success' role='alert'>"+currentDate.toTimeString()+":"+data.cadet+" signed in</div>");
                     socket.emit("Attendance",{command:"GETLIVESTATS",attendanceID:attendanceID});
                    break;
                case "SIGNINDUPLICATE":
                    //alert("That was a duplicate!");
                    var currentDate = new Date();
                     $('#liveAttendance').prepend("<div class='alert alert-warning' role='alert'>"+currentDate.toTimeString()+":"+data.cadet+" entered again, duplicate</div>");
                     
                    break;
                case "UPDATELIVESTATS":
                    console.log(data);
                    updateGraph(data.totalCount,data.signedInCount,data.excusedCadetsCount);  
                    break;
                case "ENDATTENDANCECOMPLETE":
                    console.log(data);
                    attendanceActive.fadeOut();
                    downloadAttendance.fadeIn();
                    break;
            }
        })





function convertDate(parsedDate){
        var dbDate = parsedDate;
                //Grab the current timezone's difference and conver to epoch.
                var d = new Date();
                var n = d.getTimezoneOffset()
                //console.log("timezone offset"+n);
                //Subtract timeZone difference from parsed date (still in epoch)
                var tzDate = Date.parse(dbDate) - n;
                //console.log("tzDate"+tzDate);
                //Convert back to date.
                var finalDate = new Date();
                finalDate.setTime(tzDate);
                var nd = finalDate;
                //console.log("Localed date is "+finalDate.toLocaleString());
                return finalDate.toLocaleString();
    }

function updateGraph(total,signedIn,excused){
    visualRepresentation.setData([
       {label: "Signed In Cadets", value: signedIn},
        {label: "Excused Cadets", value: excused},
        {label: "Unaccounted For", value: total-excused-signedIn}
        ])
   
    
}

 function transformCadetsOrgGroups(cadets,orgGroups){
        for (var i = 0; i < cadets.length; i++) {
            for (var x = 0; x < orgGroups.length; x++) {
                if(cadets[i].OrgGroup == orgGroups[x].number){
                    cadets[i].OrgGroupName = orgGroups[x].name;
                }
            };
        };
    }


});

var visualRepresentation = Morris.Donut({
  element: 'cadets-donut',
  data: [
    {label: "Signed In Cadets", value: 12},
    {label: "Excused Cadets", value: 30},
    {label: "Unaccounted For", value: 20}
  ],
  colors: ['#27ae60', '#f1c40f','#c0392b']
});


 
</script>

